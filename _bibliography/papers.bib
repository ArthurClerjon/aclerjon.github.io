	urldate = {2025-02-17},
	publisher = {Social Science Research Network},
	author = {Hofmann, Lukas Max and Clerjon, Arthur and Perdu, Fabien and Bavière, Roland and Azaïs, Philippe},
	month = jan,
	year = {2025},
	file = {Full Text PDF:C\:\\Users\\ac252489\\Zotero - Copie\\storage\\U4ZHI3PT\\Hofmann et al. - 2025 - How Much District Heating in a Future Sector-Coupl.pdf:application/pdf},
