@article{hofmann_how_2025,
	address = {Rochester, NY},
	type = {{SSRN} {Scholarly} {Paper}},
	title = {How {Much} {District} {Heating} in a {Future} {Sector}-{Coupled} {Energy} {System}? {A} {Comprehensive} {Methodology} for {Mapping} and {Clustering} the {Infrastructure} {Costs} on an {Entire} {Territory}},
	shorttitle = {How {Much} {District} {Heating} in a {Future} {Sector}-{Coupled} {Energy} {System}?},
	doi = {10.2139/ssrn.5097063},
        note = {Under review},
	abstract = {In the energy transition context, district heating have great potential for generating low-carbon and cost-effective heat. They can also provide flexibility to the electrical system thanks to sector coupling solutions and thermal energy storage allowing, for instance, better integration of variable energy sources. Therefore, assessing the competitiveness of district heating would require a sector-coupled optimisation model with, as an input, the costs of the district heating infrastructure estimated throughout the entire territory at a high spatial resolution, gathered in ready-to-implement clusters. Based on the work from Persson and Werner, we present a methodology to map and cluster district heating network costs on an entire territory. It relies on easy-to-access geospatial key variables such as heat demand, building density and winter temperatures. As a case study, we applied it to France and designed two clustering approaches to gather the infrastructure costs: competitiveness-based and territory typology-based – to satisfy different model architectures. We observe, for instance, a 51 TWh annual heat supply potential for district heating in French urban areas for a total investment of 10 b€. With this comprehensive and replicable methodology, we aim to lead the way for a new and broader competitiveness assessment of district heating in sector-coupled models.},
